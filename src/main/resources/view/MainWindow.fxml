<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Priority?>

<AnchorPane fx:id="mainAnchor" minHeight="400.0" minWidth="350.0" prefHeight="650.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="twinbot.MainWindow">
    <children>
        <VBox AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" spacing="0">
            <children>
                <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="dialogContainer" spacing="8" style="-fx-padding: 10px;" />
                    </content>
                </ScrollPane>
                <HBox spacing="5" style="-fx-padding: 10px; -fx-background-color: #ffffff;">
                    <children>
                        <TextField fx:id="userInput" onAction="#handleUserInput" promptText="Type a command..." HBox.hgrow="ALWAYS" />
                        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleUserInput" text="Send" prefWidth="70.0" prefHeight="40.0" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
